<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="aicogestnew.Views.Vendors_Documents.VendorGeneralPage"
              IconImageSource="icon_feed.png"
             Title="Generales">
    <ContentPage.Content>     
            <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Image Source="fondo.jpg}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Aspect="Fill" Opacity="75" />
           
                <StackLayout Spacing="20" Padding="15">
                    <Label Text="Cód. Provedor:" FontSize="Medium" />
                    <Label Text="" x:Name="lblCodProv" FontSize="Small"/>
                <Label Text="Nombre Provedor::" FontSize="Medium" />
                    <Label Text="" x:Name="lblNomProveedor" FontSize="Small"/>
                </StackLayout>

            </Grid>
      
    </ContentPage.Content>
</ContentPage>